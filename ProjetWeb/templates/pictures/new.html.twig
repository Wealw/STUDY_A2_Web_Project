{% extends 'base.html.twig' %}

{% block body %}

<div class="form">
    <h3 class="form">AJOUTER UNE PHOTO</h3>
    {{ form_start(form) }}
        <div class="group off">{{ form_row(form.picture_name) }}</div>
        <div class="group off">{{ form_row(form.picture_description) }}</div>
        <div class="group off">{{ form_row(form.picture_path) }}</div>
        {{ form_rest(form) }}
        <button type="submit" class="contained">AJOUTER</button>
    {{ form_end(form) }}
</div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/form.js') }}"></script>
{% endblock %}