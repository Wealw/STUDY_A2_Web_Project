{% extends 'base.html.twig' %}

{% block title 'Les événement | BDE.CESI' %}

{% block body %}

    <h1>Les événements</h1>
    <section>
        <div class="search_type" style="margin-bottom: 32px">
            <h3>Personnaliser la recherche</h3>
            <div class="row justify_between align_center">
                <div class="grower">
                    {{ form_start(form) }}
                    <div class="group off half">
                        {{ form_row(form.maxPrice) }}
                    </div>
                    <div class="group half select">
                        {{ form_rest(form) }}
                    </div>
                    <button type="submit" class="contained"><i class="material-icons">search</i></button>
                    {{ form_end(form) }}
                </div>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('admin.events.new') }}" class="contained"><i class="material-icons">add</i> NOUVEL
                        ÉVÉNEMENT</a>
                {% endif %}
            </div>
        </div>
        <div class="product-container">
            {% for event in events %}
                <div class="product">
                    <div class="product-name">{{ event.eventName }}</div>
                    <img src="{{ event.eventImagePath }}" alt="">
                    <p class="event_date">Date : {{ event.eventDate | date('d-m-Y') }}
                        à {{ event.eventDate | date('H:i') }}</p>
                    <div class="product-price">
                        {{ event.eventPrice }}€
                    </div>
                    <br>
                    <br>
                            {% if app.user and event.eventDate > today %}
                                <a href="" class="blue">S'INSCRIRE</a>
                            {% endif %}
                    <a href="{{ path('events.show', {id: event.Id}) }}">
                        <button>Voir</button>
                    </a>

                </div>
            {% endfor %}
        </div>
        <div class="pagination">
            {{ knp_pagination_render(events) }}
        </div>
    </section>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/form.js') }}"></script>
{% endblock %}