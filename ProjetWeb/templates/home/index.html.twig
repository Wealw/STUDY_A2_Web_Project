{% extends 'base.html.twig' %}

{% block body %}
    <h1>Projet Weeb</h1>

    <section>
        <h2>Les événements :</h2>
        <div class="grid-4">
            {% for event in next_events %}
                <div class="card">
                    <div class="card_header">
                        {{ event.eventName }}
                    </div>
                    <div class="card_body">
                        <img src="{{ event.eventImagePath }}" alt="">
                    </div>
                    <div class="card_body">
                        <div class="row">
                            <a href="{{ path('events.show', {id: event.Id}) }}#photos">LES PHOTOS</a>
                            <a href="{{ path('events.show', {id: event.Id}) }}" class="contained">VOIR</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>



{% endblock %}