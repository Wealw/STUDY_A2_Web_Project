{% extends 'base.html.twig' %}

{% block title 'Les produits - Admin | BDE-CESI' %}

{% block body %}
    <h1>Les produits</h1>

    <a href="{{ path('admin.index') }}">Go Back</a>
    <a href="{{ path('admin.merch.product.add') }}">Add Product</a>
    <a href="{{ path('download.products') }}">DL All Products Images</a>
    <div class="search_type" style="margin-bottom: 32px">
        <h3>Personnaliser la recherche</h3>
        <div class="form_justify">
            {{ form_start(form) }}
            <div class="group off half search_bar">{{ form_rest(form) }}</div>
            <button type="submit" class="contained_no-width">RECHERCHER</button>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="tabOverflowContainer">
        <table class="admin_list">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Type</th>
                <th>â‚¬</th>
                <th>Description</th>
                <th>Qty</th>
            </tr>
            </thead>
            <tbody class="product">
            {% for product in products %}
                <tr class="admin_product">
                    <td><a href="{{ path('admin.merch.product.id', {id: product.Id}) }}">{{ product.productName }}</a></td>
                    <td>{{ product.productType.productTypeName }}</td>
                    <td>{{ product.productPrice }}</td>
                    <td><p><a>{{ product.productDescription }}</a></p></td>
                    <td>{{ product.productInventory }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/form.js') }}"></script>
    <script src="{{ asset('assets/js/ajaxProductSearch.js') }}"></script>
{% endblock %}