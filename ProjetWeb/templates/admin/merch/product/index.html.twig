{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('admin.index') }}"><button>Go Back</button></a>
    <a href="{{ path('admin.merch.product.add') }}"><button>Add Product</button></a>
    <div class="search_type" style="margin-bottom: 32px">
        <h3>Personnaliser la recherche</h3>
        {{ form_start(form) }}
        <div class="group off half search_bar">{{ form_rest(form) }}</div>
        <button type="submit" class="contained">RECHERCHER</button>
        {{ form_end(form) }}
    </div>


                   <table class="admin_list">
                   <thead>
                   <tr>
                       <th>Titre de l'événement</th>
                       <th>Date de l'événement</th>
                       <th>Ajouté le</th>
                       <th>Auteur</th>
                       <th>Actions</th>
                   </tr>
                   </thead>
                   <tbody class="product">
                   {% for product in products %}
                       <tr class="admin_product">
                           <td><a href="{{ path('admin.merch.product.id', {id: product.Id}) }}">{{ product.productName }}</a></td>
                           <td>{{ product.productPrice }}</td>
                           <td>{{ product.productInventory }}</td>
                           <td>{{ product.productDescription }}</td>
                           <td class="row">
                               <a href="{{ path('admin.merch.product.id', {id: product.id}) }}" class="contained">EDITER</a>
                           </td>
                       </tr>
                   {% endfor %}
                   </tbody>
               </table>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/form.js') }}"></script>
    <script src="{{ asset('assets/js/ajaxProductSearch.js') }}"></script>
{% endblock %}