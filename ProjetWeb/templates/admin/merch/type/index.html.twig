{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('admin.index') }}"><button>Go Back</button></a>
    <a href="{{ path('admin.merch.type.add') }}"><button>Add Type</button></a>

    <table class="admin_list">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody class="type">
            {% for type in types %}
                <tr class="admin-style">
                    <td>{{ type.Id }}</td>
                    <td>{{ type.productTypeName }}</td>
                    <td class="button-container"><a href="{{ path('admin.merch.type.edit', {id: type.id}) }}"><button>Edit</button></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
